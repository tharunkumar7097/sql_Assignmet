Create a database schema for the online consultation and therapy website. The database should contain the following tables:-


CREATE DATABASE ONLINE_CONSULTATION; -- database creation
USE ONLINE_CONSULTATION;


CREATE TABLE DOCTOR(
DOC_ID INT PRIMARY KEY NOT NULL,
DOC_NAME VARCHAR(40) NOT NULL,
SPECIALIZATION VARCHAR(20) NOT NULL,
EXPERIENCE INT NOT NULL);


CREATE TABLE APPOINTMENTS(APT_ID INT PRIMARY KEY NOT NULL,
APT_DATE DATE NOT NULL,APT_TIME TIME NOT NULL,DURATION INT NOT NULL,
PATIENT_ID INT NOT NULL,PATIENT_NAME VARCHAR(50) NOT NULL,
DOC_ID INT NOT NULL,DOC_NAME VARCHAR(40));


CREATE TABLE PATIENT(PATIENT_ID INT NOT NULL,
PATIENT_NAME VARCHAR(30) NOT NULL,AGE INT NOT NULL,
GENDER VARCHAR(20) NOT NULL,CONTACT INT NOT NULL);


CREATE TABLE REVIEWS(REVIEW_ID INT NOT NULL,
PATIENT_ID INT NOT NULL,PATIENT_NAME VARCHAR(30),
DOC_ID INT NOT NULL,DOC_NAME VARCHAR(40) NOT NULL,
RATING INT NOT NULL,REMARKS VARCHAR(500));

